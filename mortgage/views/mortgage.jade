h1= title
dl
    dt Loan Amount
        dl #{mortgage.OrginAmount}
    dt Loan Balance
        dl #{mortgage.Balance}
    dt Unpaid Interest
        dl #{mortgage.InterestUnpaid}

table
    thead
        th Date
        th Principal
        th Interest
        th Amount
    tbody
        - for (var t in mortgage.Transaction)
            tr
                td #{mortgage.Transaction[t].Date}
                td #{mortgage.Transaction[t].Principal}
                td #{mortgage.Transaction[t].Interest}
                td #{mortgage.Transaction[t].Amount}